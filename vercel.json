{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "routes/**/*.js", "use": "@vercel/node" }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/server.js",
        "methods": ["GET", "POST", "PUT", "PATCH", "DELETE", "OPTIONS"]
      }
    ],
    "headers": [
      {
        "source": "/api/(.*)",
        "headers": [
          { "key": "Access-Control-Allow-Origin", "value": "https://finance-tracker-fe-git-main-abin-mathews-projects.vercel.app" },
          { "key": "Access-Control-Allow-Methods", "value": "GET,POST,PUT,PATCH,DELETE,OPTIONS" },
          { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" },
          { "key": "Access-Control-Allow-Credentials", "value": "true" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/api/auth/login",
        "destination": "/server.js",
        "headers": {
          "Access-Control-Allow-Origin": "https://finance-tracker-fe-git-main-abin-mathews-projects.vercel.app"
        }
      }
    ]
  }