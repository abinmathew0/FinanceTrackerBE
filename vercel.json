{
    "version": 2,
    "builds": [
      { "src": "server.js", "use": "@vercel/node" },
      { "src": "routes/**/*.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server.js" }
    ],
    "routes": [
      {
        "src": "/api/auth/login",
        "dest": "/server.js",
        "methods": ["POST", "OPTIONS"]
      }
    ]
  }